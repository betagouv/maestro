<html lang='fr'>
  <head>
    <title>Prélèvement {{reference}}</title>
  </head>
  <body>
    <header role='banner' class='fr-header'>
      <div class='fr-header__body'>
        <div class='fr-container'>
          <div class='fr-header__body-row' >
            <div class='fr-header__brand'>
              <div class='fr-header__brand-top'>
                <div class='fr-header__logo'>
                  <p class='fr-logo'>
                    Ministère
                    <br />
                    de l'Agriculture
                    <br />
                    et de la Souveraineté
                    <br />alimentaire
                  </p>
                </div>
                <div class='fr-header__operator'>
                  <img
                    src='{{inlineImage "logo.svg"}}'
                    style='max-height: 100px; max-width: 100px; margin-bottom: 1rem;'
                  />
                </div>
              </div>
            </div>
            <div class='document-title'>
              {{#if fullVersion}}
                <b>Procès-verbal de prélèvement</b>
                <br />
                Prélèvement
                <b>{{reference}}</b>
              {{else}}
                <b>Étiquette du prélèvement</b>
                <br />
                Prélèvement
                <b>{{reference}}</b>
                {{#if (and laboratory (eq copyNumber 1))}}
                  <br />
                  À envoyer à <b>{{laboratory.name}}</b>
                  <br />
                  {{laboratory.address}} - {{laboratory.postalCode}} {{laboratory.city}}
                {{/if}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </header>
    <main>
      <table>
        <thead>
          <tr>
            <td>
              <div class='header-space'>&nbsp;</div>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class='fr-container'>
                <section class='sample-section border {{#if fullVersion}}full-version{{/if}}' style='background-color: var(--beige-gris-galet-975-75)'>
                  <div class='fr-grid-row fr-grid-row--gutters'>
                    <div class='{{#if fullVersion}}fr-col-6{{else}}fr-col-12{{/if}}'>
                      <div class='fr-container'>
                        <div class='fr-grid-row fr-grid-row--gutters'>
                          <div class='fr-col-12'>
                            <div class='sample-section-header'>
                              <span class="uppercase">Contexte du prélèvement</span>
                            </div>
                          </div>
                          <div class='{{#if fullVersion}}fr-col-12{{else}}fr-col-6{{/if}}'>
                            <div class='sample-section-item'>
                              <div class='label'>
                                Donneur d'ordre
                              </div>
                              <div class='value {{#if (isEmpty establishment.name)}}empty{{/if}}'>
                                {{establishment.name}}
                              </div>
                              <div class='sub-value'>
                                {{#if establishment.additionalLine}}
                                  {{establishment.additionalLine}}, 
                                {{/if}}
                                {{establishment.street}}, 
                                {{establishment.postalCode}} {{establishment.city}}
                              </div>
                            </div>
                          </div>
                          {{#if (eq fullVersion false)}}
                            <div class='fr-col-6'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Contexte du prélèvement
                                </div>
                                <div class='value {{#if (isEmpty context)}}empty{{/if}}'>
                                  {{context}}
                                </div>
                              </div>
                            </div>
                          {{/if}}
                          <div class='{{#if fullVersion}}fr-col-12{{else}}fr-col-6{{/if}}'>
                            <div class='fr-grid-row'>
                              <div class='{{#if additionalSampler}}fr-col-6{{else}}fr-col-12{{/if}}'>
                                <div class='sample-section-item'>
                                  <div class='label'>
                                    Agent habilité {{#if additionalSampler}}n°1{{/if}}
                                  </div>
                                  <div class='value {{#if (isEmpty sampler.name)}}empty{{/if}}'>
                                    {{sampler.name}}
                                  </div>
                                  <div class='sub-value'>
                                    {{sampler.email}}
                                  </div>
                                </div>
                              </div>
                              {{#if additionalSampler}}
                                <div class='fr-col-6'>
                                  <div class='sample-section-item'>
                                    <div class='label'>
                                      Agent habilité n°2
                                    </div>
                                    <div class='value {{#if (isEmpty additionalSampler.name)}}empty{{/if}}'>
                                      {{additionalSampler.name}}
                                    </div>
                                    <div class='sub-value'>
                                      {{additionalSampler.email}}
                                    </div>
                                  </div>
                                </div>
                              {{/if}}
                            </div>
                            <div class='notice'>
                              habilitée(s) à procéder à l’inspection, et au contrôle tels que prévus aux articles R.206-1,
                              R.206-2, R.250-1 et L.250-6 du code rural et de la pêche maritime
                            </div>
                          </div>
                          {{#if (eq fullVersion false)}}
                            <div class='fr-col-6'>
                              <div class='fr-grid-row fr-grid-row--gutters fr-px-1v'>
                          {{/if}}
                          <div class='fr-col-6'>
                            <div class='sample-section-item'>
                              <div class='label'>
                                Date
                              </div>
                              <div class='value {{#if (isEmpty sampledAtDate)}}empty{{/if}}'>
                                {{sampledAtDate}}
                              </div>
                            </div>
                          </div>
                          <div class='fr-col-6'>
                            <div class='sample-section-item'>
                              <div class='label'>
                                Heure
                              </div>
                              <div class='value {{#if (isEmpty sampledAtTime)}}empty{{/if}}'>
                                {{sampledAtTime}}
                              </div>
                            </div>
                          </div>
                          {{#if (eq fullVersion false)}}
                              </div>
                            </div>
                          {{/if}}
                          {{#if fullVersion}}
                            <div class='fr-col-12'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Note additionnelle
                                </div>
                                <div class='value {{#if (isEmpty notesOnCreation)}}empty{{/if}}'>
                                  {{breaklines notesOnCreation}}
                                </div>
                              </div>
                            </div>
                          {{/if}}
                        </div>
                      </div>
                    </div>
                    {{#if fullVersion}}
                      <div class='fr-col-6'>
                        <div class='fr-container'>
                          <div class='fr-grid-row fr-grid-row--gutters'>
                            <div class='fr-col-12'>
                              <div class='sample-section-header'>
                                <div class="uppercase" style="flex-grow: 1">{{context}}</div>
                                {{#if releaseControl}}
                                  <div class="fr-badge fr-badge--sm fr-badge--purple-glycine fr-m-0">Contrôle libératoire</div>
                                {{/if}}
                              </div>
                            </div>
                            <div class='fr-col-12'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Numéro
                                </div>
                                <div class='value {{#if (isEmpty reference)}}empty{{/if}}'>
                                  {{reference}}
                                </div>
                              </div>
                            </div>
                            <div class='fr-col-12'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Cadre juridique
                                </div>
                                <div class='value {{#if (isEmpty legalContext)}}empty{{/if}}'>
                                  {{legalContext}}
                                </div>
                              </div>
                            </div>
                            <div class='fr-col-12'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Entité contrôlée
                                </div>
                                <div class='value {{#if (isEmpty company.name)}}empty{{/if}}'>
                                  {{company.name}}
                                </div>
                                {{#if company.address}}
                                  <div class='sub-value'>
                                    {{company.address}}, 
                                    {{company.postalCode}}, 
                                    {{company.city}}
                                  </div>
                                {{/if}}
                              </div>
                            </div>
                            <div class='fr-col-6'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  N° ou appellation de la parcelle
                                </div>
                                <div class='value {{#if (isEmpty parcel)}}empty{{/if}}'>
                                  {{parcel}}
                                </div>
                              </div>
                            </div>
                            <div class='fr-col-6'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Département
                                </div>
                                <div class='value {{#if (isEmpty department)}}empty{{/if}}'>
                                  {{department}}
                                </div>
                              </div>
                            </div>
                            {{#if (eq specificData.programmingPlanKind 'PPV')}}
                              <div class='fr-col-6'>
                                <div class='sample-section-item'>
                                  <div class='label'>
                                    Identifiant Resytal
                                  </div>
                                  <div class='value {{#if (isEmpty resytalId)}}empty{{/if}}'>
                                    {{resytalId}}
                                  </div>
                                </div>
                              </div>
                            {{/if}}
                            <div class='fr-col-6'>
                              <div class='sample-section-item'>
                                <div class='label'>
                                  Siret
                                </div>
                                <div class='value {{#if (isEmpty company.siret)}}empty{{/if}}'>
                                  {{company.siret}}
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {{/if}}
                  </div>
                </section>

                <section class='sample-section border {{#if fullVersion}}full-version{{/if}}' style="border-left: 2px solid #2A401A;">
                  <div class='fr-container'>
                    <div class='fr-grid-row fr-grid-row--gutters'>
                      <div class='fr-col-12'>
                        <div class='sample-section-header'>
                          <span class="uppercase">Matrice contrôlée{{#if fullVersion}} et analyses{{/if}}</span>
                        </div>
                      </div>
                      <div class='fr-col-4'>
                        <div class='sample-section-item'>
                          <div class='label'>
                            Catégorie de matrice
                          </div>
                          <div class='value {{#if (isEmpty matrixKind)}}empty{{/if}}'>
                            {{matrixKind}}
                          </div>
                        </div>
                      </div>
                      <div class='fr-col-4'>
                        <div class='sample-section-item'>
                          <div class='label'>
                            Matrice
                          </div>
                          <div class='value {{#if (isEmpty matrix)}}empty{{/if}}'>
                            {{matrix}}
                          </div>
                        </div>
                      </div>
                      <div class='fr-col-4'>
                        <div class='sample-section-item'>
                          <div class='label'>
                            Stade
                          </div>
                          <div class='value {{#if (isEmpty stage)}}empty{{/if}}'>
                            {{stage}}
                          </div>
                        </div>
                      </div>
                      {{#if fullVersion}}
                        {{#each specificDataItems}}
                          <div class='fr-col-4'>
                            <div class='sample-section-item'>
                              <div class='label'>
                                {{this.label}}
                              </div>
                              <div class='value {{#if (isEmpty this.value)}}empty{{/if}}'>
                                {{this.value}}
                              </div>
                            </div>
                          </div>
                        {{/each}}
                      </div>
                      <div class='fr-grid-row fr-grid-row--gutters fr-mt-1w'>
                        {{#if (or (eq substanceKind 'Any') (eq substanceKind 'Mono'))}}
                          <div class='{{#if (eq substanceKind 'Any')}}fr-col-6{{else}}fr-col-12{{/if}}'>
                            <div class='substances-container'>
                              {{#if matrix}}
                                {{#isDefinedArray monoSubstances}}
                                  <div class='substance-label'>
                                    Mono-résidu
                                  </div>
                                  <ul>
                                  {{#each monoSubstances}}
                                    <li class='substance-value'>
                                      {{this}}
                                    </li>
                                  {{/each}}
                                  </ul>
                                {{/isDefinedArray}}
                              {{else}}
                                <div class='substance-label'>
                                  Mono-résidu
                                </div>
                                <div class='empty'>
                                </div>
                                <div class='empty'>
                                </div>
                                <div class='empty'>
                                </div>
                              {{/if}}
                            </div>
                          </div>
                        {{/if}}
                        {{#if (or (eq substanceKind 'Any') (eq substanceKind 'Multi'))}}
                          <div class='{{#if (eq substanceKind 'Any')}}fr-col-6{{else}}fr-col-12{{/if}}'>
                            <div class='substances-container'>
                              {{#if matrix}}
                                {{#isDefinedArray multiSubstances}}
                                  <div class='substance-label'>
                                    Multi-résidus dont :
                                  </div>
                                  <ul>
                                    {{#each multiSubstances}}
                                      <li class='substance-value'>
                                        {{this}}
                                      </li>
                                    {{/each}}
                                  </ul>
                                {{/isDefinedArray}}
                              {{else}}
                                <div class='substance-label'>
                                  Multi-résidus
                                </div>
                                <div class='empty'>
                                </div>
                                <div class='empty'>
                                </div>
                                <div class='empty'>
                                </div>
                              {{/if}}
                            </div>
                          </div>
                        {{/if}}
                        {{#if (eq substanceKind 'Copper')}}
                          <div class='fr-col-12'>
                            <div class='substances-container'>
                              <div class='substance-label'>
                                Cuivre
                              </div>
                            </div>
                          </div>
                        {{/if}}
                        <div class='{{#if sampleDocuments}}fr-col-6{{else}}fr-col-12{{/if}}'>
                          <div class='sample-section-item'>
                            <div class='label'>
                              Note additionnelle
                            </div>
                            <div class='value {{#if (isEmpty notesOnMatrix)}}empty{{/if}}'>
                              {{breaklines notesOnMatrix}}
                            </div>
                          </div>
                        </div>
                        {{#if sampleDocuments}}
                          <div class='fr-col-6'>
                            <div class='sample-section-item'>
                              <div class='label'>
                                Pièces jointes
                              </div>
                              <ul class="fr-mt-0">
                                {{#each sampleDocuments}}
                                  <li class='value'>
                                      {{filename}}
                                    {{#if legend}}
                                      : {{legend}}
                                    {{/if}}
                                  </li>
                                {{/each}}
                              </ul>
                            </div>
                          </div>
                        {{/if}}
                      </div>
                    {{/if}}
                  </div>
                </section>

                <section class='sample-section {{#if fullVersion}}full-version{{/if}}'>
                  <div>
                    <span class="uppercase" style="font-weight: bold;font-size: 12px;">
                      Échantillons prélevés
                    </span>
                    <div class='notice'>
                      En application de l’article R. 250-2 du code rural et
                      de la pêche maritime, l(es)‘échantillon(s) a (ont)
                      été placé(s) sous scellé(s). L'étiquette
                      d’identification comportant le numéro est glissée dans
                      l'emballage placé sous scellé porteur d’un numéro
                      d’ordre unique. 
                      {{#if fullVersion}}
                        En application de l’article R.250-2 du code rural et
                        de la pêche maritime, les dispositions de l’article 35 du règlement (UE) 2017/625 du parlement
                        européen et du Conseil du 15 mars 2017 s’appliquent à tous les prélèvements d’échantillon réalisés
                        en application du présent livre et notamment en application du paragraphe 3 de l’article 35 du même règlement.
                        En application de l’article R.250-2 les échantillons prélevés ne donnent lieu à aucun remboursement.
                      {{/if}}
                      Dans le cas où un des échantillons a été remis au détenteur, ce dernier en a accepté le dépôt et s’est
                      engagé à le conserver sous température négative.
                      <b>En application de l’article R. 250-2 les échantillons prélevés ne donnent lieu à aucun remboursement.</b>
                      {{#if (and fullVersion hasNoteToSampler)}}
                        <b>Conservation et transmission : </b>
                        L'échantillon doit être conservé dans des conditions optimales pour préserver ses propriétés initiales.
                        La personne qui accepte le dépôt de ce scellé est prévenue qu'elle en assume l'entière responsabilité.
                      {{/if}}
                    </div>
                  </div>
                  <div class='fr-grid-row fr-grid-row--gutters' style="padding-left: 3px; padding-right: 3px;">
                    {{#each sampleItems}}
                      {{#if (or ../fullVersion currentItem)}}
                        <div class="{{#if ../fullVersion}}fr-col-4{{else}}fr-col-12{{/if}}">
                          {{#if (and ../fullVersion currentItem)}}
                            <div class='current-sample-item uppercase'>
                              Exemplaire rattaché au procès-verbal
                            </div>
                          {{/if}}
                          <div class='sample-item-container {{#if ../fullVersion}}sample-item-card{{/if}}'>
                            <div class='fr-grid-row fr-grid-row--gutters'>
                              <div class='fr-col-12'>
                                <div class='sample-item-title-container'>
                                  <div class="sample-item-title" style="{{#if ../fullVersion}}flex-grow: 1;{{/if}}">
                                    Échantillon n°{{itemNumber}}
                                  </div>
                                  <div class='fr-badge fr-badge--yellow-tournesol fr-badge--sm fr-badge--no-icon fr-ml-1w'>
                                    exemplaire n°{{copyNumber}}
                                  </div>
                                </div>
                              </div>
                              {{#if (or ../fullVersion quantity)}}
                                <div class='{{#if ../fullVersion}}fr-col-12{{else}}fr-col-6{{/if}}'>
                                  <div class='sample-section-item'>
                                    <div class='label'>
                                      Quantité
                                    </div>
                                    <div class='value {{#if (isEmpty quantity)}}empty{{/if}}'>
                                      {{quantity}}
                                    </div>
                                  </div>
                                </div>
                              {{else}}
                                <div class='fr-col-4'>
                                  <div class='sample-section-item'>
                                    <div class='label'>
                                      Nombre
                                    </div>
                                    <div class='value empty'>
                                    </div>
                                  </div>
                                </div>
                                <div class='fr-col-4'>
                                  <div class='sample-section-item'>
                                    <div class='label'>
                                      Unité de mesure
                                    </div>
                                    <div class='value empty'>
                                    </div>
                                  </div>
                                </div>
                              {{/if}}
                              <div class="{{#if ../fullVersion}}fr-col-12{{else}}fr-col-4{{/if}}">
                                <div class='sample-section-item'>
                                  <div class='label'>
                                    Numéro de scellé
                                  </div>
                                  <div class='value {{#if (isEmpty sealId)}}empty{{/if}}'>
                                    {{sealId}}
                                  </div>
                                </div>
                              </div>
                              <div class="{{#if ../fullVersion}}fr-col-12{{else}}fr-col-6{{/if}}">
                                <div class='sample-section-item'>
                                  <div class='label'>
                                    Destinataire
                                  </div>
                                  {{#if (eq copyNumber 1)}}
                                    <div class='value {{#if (isEmpty ../laboratory)}}empty{{/if}}'>
                                      {{#if ../laboratory}}
                                        Laboratoire {{../laboratory.shortName}}
                                      {{/if}}
                                    </div>
                                  {{/if}}
                                  {{#if (or (eq copyNumber 2) (eq copyNumber 3))}}
                                    <div class='value {{#if (isEmpty recipientKind)}}empty{{/if}}'>
                                      {{recipientKind}}
                                    </div>
                                  {{/if}}
                                </div>
                              </div>
                              <div class="{{#if ../fullVersion}}fr-col-12{{else}}fr-col-6{{/if}}">
                                <div class='sample-section-item'>
                                  <div class='label'>
                                    Directive 2002/63
                                  </div>
                                  {{#if ../fullVersion}}
                                    <div class='value {{#if (isEmpty compliance200263)}}empty{{/if}} {{#if (eq compliance200263 true)}}fr-label--success{{/if}} {{#if (eq compliance200263 false)}}fr-label--error{{/if}}'>
                                      {{#if (eq compliance200263 true)}}Respectée{{/if}}
                                      {{#if (eq compliance200263 false)}}Non Respectée{{/if}}
                                    </div>
                                  {{else}}
                                    <div class="fr-radio-group">
                                      <input type="radio" {{#if (eq compliance200263 true)}}checked{{/if}}>
                                      <label class="fr-label">Respectée</label>
                                      <input type="radio"{{#if (eq compliance200263 false)}}checked{{/if}}>
                                      <label class="fr-label">Non Respectée</label>
                                    </div>
                                  {{/if}}
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      {{/if}}
                    {{/each}}
                    {{#if fullVersion}}
                      <div class='fr-col-12'>
                        <div class='sample-section-item'>
                          <div class='label'>
                            Note additionnelle concernant les échantillons
                          </div>
                          <div class='value {{#if (isEmpty notesOnItems)}}empty{{/if}}'>
                            {{breaklines notesOnItems}}
                          </div>
                        </div>
                      </div>
                    {{/if}}
                  </div>
                </section>

                {{#if fullVersion}}
                  <section class='sample-section border {{#if fullVersion}}full-version{{/if}}'>
                    <div class='fr-container'>
                      <div class='fr-grid-row fr-grid-row--gutters'>
                        <div class='fr-col-6'>
                          <div class='sample-section-item'>
                            <div class='value'>
                              Le détenteur accepte les informations portées au présent procès-verbal
                            </div>
                            <div class="fr-radio-group">
                              <input type="radio" {{#if (eq ownerAgreement true)}}checked{{/if}}>
                              <label class="fr-label">Oui</label>
                              <input type="radio"{{#if (eq ownerAgreement false)}}checked{{/if}}>
                              <label class="fr-label">Non</label>
                            </div>
                          </div>
                          {{#if ownerEmail}}
                            <div class='label fr-mt-1w'>
                              Le détenteur de la marchandise a reçu par e-mail le procès-verbal du prélèvement
                            </div>
                          {{/if}}
                        </div>
                        <div class='fr-col-6'>
                          <div class='sample-section-item'>
                            <div class='label'>
                              Déclaration du détenteur
                            </div>
                            <div class='value {{#if (isEmpty notesOnOwnerAgreement)}}empty{{/if}}'>
                              {{breaklines notesOnOwnerAgreement}}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
                {{/if}}

              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </main>
  </body>
</html>
